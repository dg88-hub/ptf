{
  "name": "playwright-test-framework",
  "version": "1.0.0",
  "description": "Enterprise-grade Playwright Test Automation Framework with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "test": "playwright test",
    "test:quick": "playwright test --project=chromium --headed --workers=1",
    "test:smoke": "playwright test --grep @smoke",
    "test:sanity": "playwright test --grep @sanity",
    "test:regression": "playwright test --grep @regression",
    "test:health": "playwright test --grep @health",
    "test:api": "playwright test tests/api",
    "test:db": "playwright test tests/database",
    "test:ui": "playwright test tests/ui",
    "test:mobile": "playwright test tests/mobile",
    "test:keyword": "playwright test tests/keyword",
    "test:a11y": "playwright test --grep @a11y",
    "test:visual": "playwright test --grep @visual --update-snapshots",
    "test:sit": "cross-env TEST_ENV=sit playwright test",
    "test:fat": "cross-env TEST_ENV=fat playwright test",
    "test:uat": "cross-env TEST_ENV=uat playwright test",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:parallel": "playwright test --workers=4",
    "test:shard": "playwright test --shard",
    "test:erp": "playwright test --grep @erp",
    "test:insurance": "playwright test --grep @insurance",
    "test:ap": "playwright test --grep @ap",
    "test:ar": "playwright test --grep @ar",
    "test:gl": "playwright test --grep @gl",
    "test:load": "playwright test --grep @load",
    "test:manage": "npx ts-node src/management/TestPlanRunner.ts",
    "test:history": "npx ts-node src/management/ResultViewer.ts",
    "report": "playwright show-report",
    "report:allure": "allure generate allure-results --clean && allure open",
    "codegen": "playwright codegen",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "docs": "typedoc --out docs/api src",
    "clean": "rimraf playwright-report test-results dist allure-results",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prepare": "husky install"
  },
  "keywords": [
    "playwright",
    "test-automation",
    "typescript",
    "e2e",
    "api-testing",
    "enterprise"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@mswjs/http-middleware": "^0.10.3",
    "@playwright/test": "^1.40.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/imap": "^0.8.43",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "ajv": "^8.12.0",
    "allure-playwright": "^2.10.0",
    "cors": "^2.8.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^0.20.0",
    "express": "^5.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "msw": "^2.12.7",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "imap": "^0.8.19",
    "mailparser": "^3.6.5",
    "oracledb": "^6.2.0",
    "pg": "^8.11.3",
    "ssh2-sftp-client": "^9.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "zod": "^4.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

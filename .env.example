# ============================================
# Environment Configuration
# ============================================
# Copy this file to .env and fill in the values
# Never commit .env to version control

# Test Environment (sit, fat, uat)
TEST_ENV=sit

# ============================================
# Environment Base URLs
# ============================================
SIT_BASE_URL=https://the-internet.herokuapp.com
FAT_BASE_URL=https://the-internet.herokuapp.com
UAT_BASE_URL=https://the-internet.herokuapp.com

# API Base URL (reqres.in for demo)
API_BASE_URL=https://reqres.in/api

# ============================================
# Database Configuration - PostgreSQL
# ============================================
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=testdb
PG_USER=testuser
PG_PASSWORD=testpassword
PG_SSL=false

# ============================================
# Database Configuration - Oracle
# ============================================
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ORCL
ORACLE_USER=testuser
ORACLE_PASSWORD=testpassword

# ============================================
# SFTP Configuration
# ============================================
SFTP_HOST=localhost
SFTP_PORT=22
SFTP_USER=sftpuser
SFTP_PASSWORD=sftppassword
# Or use key-based authentication
# SFTP_PRIVATE_KEY_PATH=/path/to/private/key

# ============================================
# Email Configuration (IMAP)
# ============================================
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=test@example.com
IMAP_PASSWORD=app_specific_password
IMAP_TLS=true

# ============================================
# Test Execution Settings
# ============================================
# Number of parallel workers (default: 50% of CPU cores)
WORKERS=4

# Headless mode (true/false)
HEADLESS=true

# Screenshot on failure (true/false)
SCREENSHOT_ON_FAILURE=true

# Video recording (true/false)
VIDEO_RECORDING=false

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/test-execution.log

# ============================================
# CI/CD Configuration
# ============================================
CI=false
